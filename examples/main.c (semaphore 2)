#include <lm4f_120xl.h>
#include <os.h>

sem_t sem = SEM_INIT(0, semBinary);

void slave()
{
	sem_wait(&sem);

	LED_Tick();
}

void master()
{
	tsk_delay(SEC);

	sem_give(&sem);
}

tsk_t sla = TSK_INIT(0, slave);
tsk_t mas = TSK_INIT(0, master);

int main()
{
	LED_Config();

	tsk_start(&sla);
	tsk_start(&mas);
	tsk_stop();
}
