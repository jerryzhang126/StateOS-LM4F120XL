#include <lm4f_120xl.h>
#include <os.h>

sem_id sem = SEM_CREATE(0, semBinary);

void slave()
{
	sem_wait(sem);

	LED_Tick();
}

void master()
{
	tsk_delay(SEC);

	sem_give(sem);
}

tsk_id sla = TSK_CREATE(0, slave);
tsk_id mas = TSK_CREATE(0, master);

int main()
{
	LED_Config();

	tsk_start(sla);
	tsk_start(mas);
	tsk_stop();
}
