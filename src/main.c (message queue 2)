#include <lm4f_120xl.h>
#include <os.h>

msg_t msg = MSG_INIT(1);

void slave()
{
	unsigned x;

	for (;;)
	{
		msg_wait(&msg, &x);

		LEDs = x;
	}
}

void master()
{
	unsigned x = 0;

	for (;;)
	{
		tsk_delay(SEC);

		msg_give(&msg, ++x);
	}
}

tsk_t sla = WRK_INIT(0, slave,  256);
tsk_t mas = WRK_INIT(0, master, 256);

int main()
{
	LED_Config();

	tsk_start(&sla);
	tsk_start(&mas);
	tsk_stop();
}
