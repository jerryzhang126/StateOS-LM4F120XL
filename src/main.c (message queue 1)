#include <lm4f_120xl.h>
#include <os.h>

OS_MSG(msg, 1);

void slave()
{
	unsigned x;

	for (;;)
	{
		msg_wait(msg, &x);

		LEDs = x;
	}
}

void master()
{
	unsigned x = 0;

	for (;;)
	{
		tsk_delay(SEC);

		msg_give(msg, ++x);
	}
}

OS_WRK(sla, 0, slave,  256);
OS_WRK(mas, 0, master, 256);

int main()
{
	LED_Config();

	tsk_start(sla);
	tsk_start(mas);
	tsk_stop();
}
